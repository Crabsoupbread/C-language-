#define _CRT_SECURE_NO_WARNINGS 1

#include<stdio.h>

int main()
{
	int a = 0;
	int b = ~a;//~为按位取反的意思，按位取反的意思是：
	//如1010，按位取反后为0101.（二进制位取反）
	//a的二进制位为00000000000000000000000000000000
	//-按位取反结果11111111111111111111111111111111，最高位为1时判断为负数，但是负数的真实值要-1取补码
	printf("%d\n", b);//输出结果为-1的原因是负数在二进制的存储中储存方式为补码

	int x = 10;
	int y = 5;
	int m = x++;//后置++，先使用x的值，x再加一。代码层面是m=x,x=x+1。
	int n = ++y;//前置++，先y+1，再使用y的值。代码层面是y = y+1,n=y.
	printf("x=%d m=%d\n", x, m);
	printf("y=%d n=%d\n", y, n);
	//&&表示逻辑判断的与，||表示逻辑判断的或。
	//c=a&&b,当a与b都不为0时，c输出为1（真），否则为0（假）.
	//c=a||b,当a或b其中一个不为0时，c输出为1（真），都为0时才输出0（假）.
	return 0;
}
