#define _CRT_SECURE_NO_WARNINGS 1

#include<stdio.h>

int main()
{
	int arr[10] = { 0 };
	//int定义的数组，每个元素占用4个字节。
	int* p = arr;
	//指针初始指向数组第一个元素的地址
	//int*一次操作4个字节
	//char*一次操作一个字节
	//double*一次操作8个字节
	int i = 0;
	for (i = 0; i < 10; i++)
	{
		*(p + i) = 1;
		printf("%d ", arr[i]);
	}
	

	return 0;
}
