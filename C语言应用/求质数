int main()//打印一个范围内的质数(100-200)
{
	//第一种方法为试除法。方法为某个数i让它除以除它之前的每个数字
	int i = 0;
	int j = 0;
	for (i = 100; i < 200; i++)
	{
		for (j = 2; j < i; j++)//创造第二个数使其作为分母，范围为除i之外的所有小于i的数.注意j不能为0和1.
		{
			if (i % j == 0)//i与j取模，余数为0时表示整除
			{
				break;//这个break语句会跳出更上一级的循环，即if之上的for循环，但不会跳出最大的for循环
			}
		}
		if (j == i)//如果上个for循环中没有找到可以被整除的数，那么显然这个数是素数，打印
		{
			printf("%d,\n", i);
		}
	}
	
	return 0;
}
//第一种办法不太好，原因是占用了很多无效的时间，事实上对于数学运算中，当一个数可以被表示为 i = a*b时，一定有以下的性质：
//a与b其中一个数一定小于或等于根号i。为此以下写法将是更优解。

#include<stdio.h>
#include<math.h>
int main()//优化后的计算方法（质数）
{
	int i = 0;
	int j = 0;
	for (i = 101; i < 200; i += 2)//i=101和i+=2这个公式直接排除了所有偶数，使得运算效率翻倍
	{
		for (j = 2; j <= sqrt(i); j++)//数学库函数sqrt()适用于给某个数开平方，使用前需要库函数math.h
		{
			if (i % j == 0)
			{
				break;
			}
		}
		if (j > sqrt(i))
		{
			printf("%d,\n", i);
		}
	}
	
	return 0;
}
